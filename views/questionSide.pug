extends layout

block content
  section.namecard
    .namecard-hello
      p.namecard-greeting Welcome, #{name}!
      form.namecard-exit(action='/goodbye', method='POST')
        button(type='submit')
          img(src='/static/img/close.svg')
  section.flashcards
    .card.card-question
      .card-header
      h1.card-title Question
      #content
        h2= text
        if hint
          p.hint(style="display: none;")
            i= hint
      .card-flip-wrap
        a(href=`/cards/${id}?side=${sideToShow}`)
          img.card-flip(src='/static/img/flip.svg')
      .card-next
        a(href='/cards')
          img(src='/static/img/next.svg')
    script(src='/static/js/app.js')

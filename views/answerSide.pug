extends layout

block content
  section.namecard
    .namecard-hello
      p.namecard-greeting Welcome, #{name}!
      form.namecard-exit(action='/goodbye', method='POST')
        button(type='submit')
          img(src='img/close.svg')
  section.flashcards
    .card.card-answer
      .card-header
      h1.card-title Answer
      #content
        h2= text
      .card-flip-wrap
        a(href=`/cards/${id}?side=${sideToShow}`) #{sideToShowText}
          img.card-flip(src='../static/img/flip.svg')
      .card-next
        a(href='/cards')
          img(src='../static/../static/img/next.svg')
    script(src='../static/js/app.js')